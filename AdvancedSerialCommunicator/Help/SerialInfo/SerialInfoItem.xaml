<UserControl x:Class="AdvancedSerialCommunicator.Help.SerialInfo.SerialInfoItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdvancedSerialCommunicator.Help.SerialInfo"
             mc:Ignorable="d" 
             d:DesignWidth="400">
    <StackPanel>
        <TextBlock Text="{Binding Header, Mode=OneTime}" VerticalAlignment="Top" FontSize="20" TextWrapping="NoWrap"/>
        <TextBlock Text="{Binding Information, Mode=OneTime}" FontSize="14" Margin="40,0,0,0" VerticalAlignment="Bottom" TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>
